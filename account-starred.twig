{% extends "layout.twig" %}

{% block content %}

    <h2>Starred Bolt Extensions</h2>
    <p class="small-text-center">{{ user.account.email }}</p>

    <hr />

    <div class="ui divided items">
        {% for package in packages %}
            <div class="item">
                <div class="ui tiny image">
                    <img src="{{ packageIcon(package) }}">
                </div>
                <div class="content">
                    <a href="{{ url('view', {'package': package.id}) }}" class="header">{{ package.title }}</a>
                    <div class="meta">
                        <span class="cinema">by {{ package.authors|join(', ') }}</span>
                    </div>
                    <div class="description">
                        <em>{{ package.name }}</em><br>
                        <p>{{ package.description }}</p>
                    </div>
                </div>
            </div>
        {% endfor %}
    </div>

{% endblock %}
