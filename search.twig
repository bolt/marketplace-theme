{% extends layout %}

{% block content %}

    {% if results is empty %}
        <div data-alert class="ui red message">No extensions were found to match your search</div>
    {% else %}

        {% if term %}
            <div data-alert class="ui blue message">Results for your search: '{{ term }}'</div>{% endif %}

        {% include 'partials/_packages.twig' with {'packages':results} %}

    {% endif %}
{% endblock %}
