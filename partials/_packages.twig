<div class="ui divided items">
    {% for package in packages %}
        <div class="item">
            <div class="ui tiny image">
                <img src="{{ packageIcon(package) }}">
            </div>
            <div class="content">
                <a class="header" href="{{ url('view',{'package':package.id}) }}">{{ package.title }}</a>
                <div class="meta">
                    <span class="cinema">by {{ package.authors|join(', ') }}</span>
                </div>
                <div class="description">
                    <em>{{ package.name }}</em><br>
                    <p>{{ package.description | slice(0,80) }} {% if package.description|length > 80 %}&#8230;{% endif %}</p>
                </div>
                <div class="extra">
                    <a href="{{ url('view',{'package':package.id}) }}" class="ui right floated primary button"> Details
                        <i class="right chevron icon"></i> </a>
                    <div class="ui label">
                        {% if "bolt-extension" == package.type %}
                            Extension
                        {% else %}
                            Theme
                        {% endif %}
                    </div>
                </div>
            </div>
        </div>
    {% endfor %}
</div>
